{
  "name": "youtube-transcript-scraper",
  "version": "1.0.0",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "node src/main.js"
  },
  "dependencies": {
    "apify": "^3.5.0",
    "playwright": "^1.45.0",
    "axios": "^1.7.2",
    "youtube-caption-extractor": "*",
    "xml2js": "^0.6.2"
  },
  "apify": {
    "builds": [
      {
        "use": "playwright-chromium",
        "options": {
          "memoryMbytes": 2048,
          "diskMbytes": 2048
        }
      }
    ],
    "env": {
      "PLAYWRIGHT_HEADLESS": "true",
      "PLAYWRIGHT_TIMEOUT": "60000"
    }
  }
}